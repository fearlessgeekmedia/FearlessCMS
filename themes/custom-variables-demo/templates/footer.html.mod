<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <!-- Footer Text -->
            <div class="footer-text">
                <p>{{footerText}}</p>
            </div>
            
            <!-- Social Links -->
            {{#if socialLinks}}
                <div class="social-links">
                    {{#each socialLinks}}
                        <a href="{{url}}" target="_blank" rel="noopener" class="social-link">
                            <i class="icon-{{icon}}"></i>
                            <span>{{name}}</span>
                        </a>
                    {{/each}}
                </div>
            {{/if}}
        </div>
    </div>
</footer> 