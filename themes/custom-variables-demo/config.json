{
    "name": "Custom Variables Demo",
    "version": "1.0.0",
    "author": "FearlessCMS",
    "description": "A demonstration theme showing how to use custom variables effectively",
    "options": {
        "logo": {
            "type": "image",
            "label": "Logo"
        },
        "heroBanner": {
            "type": "image",
            "label": "Hero Banner"
        },
        "primaryColor": {
            "type": "color",
            "label": "Primary Color",
            "default": "#3b82f6"
        },
        "secondaryColor": {
            "type": "color",
            "label": "Secondary Color",
            "default": "#10b981"
        },
        "accentColor": {
            "type": "color",
            "label": "Accent Color",
            "default": "#f59e0b"
        },
        "fontFamily": {
            "type": "select",
            "label": "Font Family",
            "options": [
                {"value": "Inter", "label": "Inter"},
                {"value": "Poppins", "label": "Poppins"},
                {"value": "Roboto", "label": "Roboto"},
                {"value": "Open Sans", "label": "Open Sans"}
            ],
            "default": "Inter"
        },
        "showSidebar": {
            "type": "boolean",
            "label": "Show Sidebar",
            "default": true
        },
        "showBreadcrumbs": {
            "type": "boolean",
            "label": "Show Breadcrumbs",
            "default": true
        },
        "showReadingTime": {
            "type": "boolean",
            "label": "Show Reading Time",
            "default": true
        },
        "showAuthor": {
            "type": "boolean",
            "label": "Show Author",
            "default": true
        },
        "showTags": {
            "type": "boolean",
            "label": "Show Tags",
            "default": true
        },
        "showCategories": {
            "type": "boolean",
            "label": "Show Categories",
            "default": true
        },
        "customCSS": {
            "type": "textarea",
            "label": "Custom CSS",
            "default": ""
        },
        "footerText": {
            "type": "text",
            "label": "Footer Text",
            "default": "Â© 2024 Custom Variables Demo"
        },
        "socialLinks": {
            "type": "array",
            "label": "Social Links",
            "default": [
                {"name": "Twitter", "url": "https://twitter.com", "icon": "twitter"},
                {"name": "GitHub", "url": "https://github.com", "icon": "github"}
            ]
        }
    }
} 